<% provide(:title, "Sign In") %>
<h1>登录</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session,url: sessions_path) do |f| %>
      <%= f.label :email, "邮箱" %>
      <%= f.text_field :email %>

      <%= f.label :password, "密码" %>
      <%= f.password_field :password %>

      <div><%= f.submit "登录",class: "btn btn-latge btn-primary" %></div>

    <% end %>

    <p>新用户？<%= link_to "马上注册",signup_path,class: "btn btn-latge btn-primary" %></p>
  </div>
</div>
